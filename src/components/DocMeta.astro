---
interface Props {
  lastUpdated?: Date | string;
  contributors?: string[];
}

const { lastUpdated, contributors } = Astro.props;

// Format date consistently as YYYY-MM-DD (same as frontmatter format)
const formatDate = (date: Date | string | undefined) => {
  if (!date) return '';
  if (typeof date === 'string') return date; // Already in YYYY-MM-DD format
  // Convert Date object to YYYY-MM-DD
  return date.toISOString().split('T')[0];
};
---

{(lastUpdated || (contributors && contributors.length > 0)) && (
  <div class="mt-8 pt-8 border-t border-border text-sm text-muted-foreground">
    <div class="flex flex-col sm:flex-row gap-4 justify-between">
      {lastUpdated && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Last updated: {formatDate(lastUpdated)}</span>
        </div>
      )}
      {contributors && contributors.length > 0 && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span>Contributors: {contributors.join(', ')}</span>
        </div>
      )}
    </div>
  </div>
)}
